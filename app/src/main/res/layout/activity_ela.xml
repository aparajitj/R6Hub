<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ela">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ela_bg"
        android:scaleType="centerCrop"


        />

    <ScrollView
        android:layout_width="379dp"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp"

        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView30"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:maxLength="200"
                android:text="Bio :Ash is a fast-paced front liner; capable of breaching, flanking and dividing the Defender's attention in seconds.
Ash is capable of ranged soft breaching thanks to her modified M120 CREM Breaching Rounds."
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/product_sans_regular"
                android:textSize="20sp"></TextView>
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>